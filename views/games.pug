extends layout

block content
  h1= title
  - let des = `dispatch(\"/games/create\")`
  button.btn( class="btn-primary ml-1" onclick= des) Create
  -
    let items  = results
  div(class= "container-fluid")
    div(class = "col m-1")
      each item,index in items
        - let destination = `dispatch(\"/games/update?id=${item._id}\")`
        - let destination1 = `dispatch(\"/games/detail?id=${item._id}\")`
        - let destination2 = `dispatch(\"/games/delete?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.game_name}(#{item.player_count}) is #{item.ticket_price}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-primary ml-1", onclick= destination1) Details
        button.btn( class="btn-primary ml-1", onclick= destination2) Delete
        
  script.
    function dispatch(path){
      window.location.href=path
    }